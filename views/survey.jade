extends layout

block content
    
    h1 Adherence Survey

    h2 Please complete the survey and press submit.

    form(method="post")
        div#survey
            each question in questions
                div.question
                    p= question.Description
                    div
                        each answer in question.Answers    
                            label
                                input(type="radio", name="question_#{question.Number}", id="question_#{question.Number}_#{answer.value}", value="#{question.Number},#{answer.value}")
                                = answer.label

        input(type="Submit", value="Submit")
                    